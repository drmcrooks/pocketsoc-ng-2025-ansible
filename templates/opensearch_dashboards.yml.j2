---

opensearch.hosts: [https://opensearch-node1.pocketsoc-ng_mirror:9200]
opensearch.ssl.verificationMode: none
opensearch.username: kibanaserver
opensearch.password: ${OPENSEARCH_INITIAL_ADMIN_PASSWORD}
opensearch.requestHeadersWhitelist: [authorization, securitytenant]

opensearch_security.multitenancy.enabled: true
opensearch_security.multitenancy.tenants.preferred: [Private, Global]
opensearch_security.readonly_mode.roles: [kibana_read_only]
opensearch_security.cookie.secure: false
server.host: '0.0.0.0'

server.ssl.enabled: true
server.ssl.certificate: /usr/share/opensearch-dashboards/config/certs/server.crt
server.ssl.key: /usr/share/opensearch-dashboards/config/certs/server.key 
opensearch.ssl.certificateAuthorities: [ "/usr/share/opensearch-dashboards/config/certs/root-ca.pem" ]
